<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_style_2_press"/>
            <stroke android:width="1dp" android:color="@color/btn_style_2_stroke_press"/>
            <corners android:radius="10dp"/>
            <padding android:left="10dp" android:top="10dp"
                     android:bottom="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/btn_style_2_press"/>
            <stroke android:width="1dp" android:color="@color/btn_style_2_stroke_press"/>
            <corners android:radius="10dp"/>
            <padding android:left="10dp" android:top="10dp"
                     android:bottom="10dp" android:right="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_style_2_normal"/>
            <stroke android:width="1dp" android:color="@color/btn_style_2_stroke_normal"/>
            <corners android:radius="10dp"/>
            <padding android:left="10dp" android:top="10dp"
                     android:bottom="10dp" android:right="10dp"/>
        </shape>
    </item>
</selector>