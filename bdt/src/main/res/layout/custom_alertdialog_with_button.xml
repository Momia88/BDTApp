<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_size"
            android:textColor="@color/white"
            android:text="123"
            android:layout_margin="10dp"
            android:id="@+id/msgTV"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginBottom="5dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:focusable="false">
        <TextView
                android:id="@+id/pp_dialog_btn_calcel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/pp_btn_cancel"
                android:textSize="@dimen/common_size_small"
                android:textColor="@color/white"
                android:background="@drawable/btn_style_solid_brown_1"/>
        <TextView
                android:id="@+id/pp_dialog_btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/pp_btn_ok"
                android:textSize="@dimen/common_size_small"
                android:textColor="@color/white"
                android:background="@drawable/btn_style_solid_brown_1"/>
    </LinearLayout>
</LinearLayout>

