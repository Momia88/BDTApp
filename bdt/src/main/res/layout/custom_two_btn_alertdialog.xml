<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <TextView
            android:id="@+id/msgTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/common_size"
            android:textColor="@color/black"
            android:text=""
            android:layout_margin="10dp"/>

    <View android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/white"
          android:layout_marginBottom="5dp"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dark_brown"
            android:focusable="false"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/pp_dialog_btn_calcel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/pp_btn_cancel"
                android:textSize="@dimen/common_size_small"
                android:textColor="@color/white"
                android:background="@drawable/btn_style_solid_orange"/>

        <TextView
                android:id="@+id/pp_dialog_btn_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/pp_btn_ok"
                android:textSize="@dimen/common_size_small"
                android:textColor="@color/white"
                android:background="@drawable/btn_style_solid_brown_2"/>
    </LinearLayout>
</LinearLayout>

