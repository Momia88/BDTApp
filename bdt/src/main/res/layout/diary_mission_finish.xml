<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/mission_second_bg"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white">
    <include layout="@layout/action_bar_with_tools"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bar_total">

        <View android:id="@+id/bar_cnt"
              android:layout_height="10dp"
              android:layout_width="match_parent"
              android:background="@color/bar_current"/>

    </LinearLayout>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:layout_marginTop="0dp"
            android:layout_gravity="center_horizontal">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal">

            <TextView
                    android:id="@+id/mission_finish_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="太棒了"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"/>

            <TextView
                    android:id="@+id/mission_finish_share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="要分享給朋友了嗎"
                    android:textSize="30sp"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="6dp"/>

            <Button android:id="@+id/finish_share_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="10dp"
                    android:text="我要分享"
                    android:textSize="30sp"
                    android:textColor="@color/dark_redbrown"
                    android:background="@drawable/btn_style_solid_yelloworange"/>


            <Button
                    android:id="@+id/prestep_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="@string/diary_back"
                    android:textSize="30sp"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_style_solid_darkbrown"/>


            <ImageView android:layout_width="170dp"
                       android:layout_height="133dp"
                       android:layout_marginTop="8dp"
                       android:layout_gravity="center_horizontal"
                       android:src="@drawable/share_diary"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>