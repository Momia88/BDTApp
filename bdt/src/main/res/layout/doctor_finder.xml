<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="#ffffffff">
    <include layout="@layout/action_bar_with_back"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/button_config"
            android:id="@+id/button_config"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/tutor_skip"
            android:textSize="@dimen/common_size"
            android:layout_margin="10dip"
            android:background="@drawable/btn_shape_selector"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/doctor_button_near"
            android:id="@+id/button_near"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/tutor_skip"
            android:textSize="@dimen/common_size"
            android:layout_margin="10dp"
            android:background="@drawable/btn_shape_selector"/>
</LinearLayout>

