<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/mainLL"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_margin="0dp"
              android:background="@color/white">
    <RelativeLayout
            android:id="@+id/viewlayout"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:background="@drawable/bar_shape">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp">
            <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返回"
                    android:layout_gravity="center_vertical"
                    android:textSize="32dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"/>
            <View
                    android:layout_height="wrap_content"
                    android:layout_width="2dp"
                    android:background="@color/actionbar_line"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/actionbar_main_size"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:id="@+id/action_bar_title"
                android:textColor="@color/white"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_margin="10dp">
            <View
                    android:id="@+id/right_line"
                    android:layout_height="wrap_content"
                    android:layout_width="2dp"
                    android:background="@color/actionbar_line"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"/>
            <Button
                    android:id="@+id/btnPopMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="功能"
                    android:layout_gravity="center_vertical"
                    android:textSize="32dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
            android:id="@+id/playerFL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            >

        <SurfaceView android:layout_width="fill_parent"
                     android:layout_height="fill_parent"
                     android:id="@+id/surfView"
                     android:layout_marginTop="40dp"
                     android:layout_marginLeft="20dp"
                     android:layout_marginRight="20dp"
                     android:layout_marginBottom="20dp"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="點影片開始播放"
                android:textColor="@color/white"
                android:background="@color/black"
                android:id="@+id/btnplay"
                android:textSize="@dimen/common_size"
                android:layout_gravity="bottom"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/loadTV"
                android:gravity="right|bottom"
                android:textSize="@dimen/common_size"
                android:textColor="@color/tutor_load"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/pauseHintTV"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="@dimen/common_size"
                android:textColor="@color/tutor_load"
                android:background="@color/videotxtbg"
                />
    </FrameLayout>
    <LinearLayout
            android:id="@+id/viewLL"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/actionbar_main_size"
                    android:text="敬請期待"
                    android:layout_gravity="center"
                    android:id="@+id/text"
                    android:textColor="@color/black"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="@string/tutorial_nextstep"
                    android:id="@+id/nextstep"
                    android:textSize="@dimen/common_size"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@drawable/text_goodfood_finder"
                    android:background="@drawable/btn_goodfood_finder"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
