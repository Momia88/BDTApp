<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:id="@+id/good_food">

    <include layout="@layout/action_bar_with_back"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/textlayout">
        <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textquestion"
                android:textColor="@color/bar_gradient_top"
                android:textSize="32sp"
                android:gravity="center_horizontal"
                android:background="#b3FFFFFF"

                />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnlayout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">


        <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:lines="3"
                android:textSize="@dimen/common_size"
                android:text="自己煮比較多"
                android:id="@+id/btnAnswer01"
                android:textColor="@drawable/text_goodfood_finder"
                android:layout_margin="4dp"
                android:background="@drawable/btn_goodfood_finder"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:lines="3"
                android:textSize="@dimen/common_size"
                android:text="吃外面比較多"
                android:id="@+id/btnAnswer02"
                android:textColor="@drawable/text_goodfood_finder"
                android:layout_marginBottom="10dp"
                android:layout_margin="4dp"
                android:background="@drawable/btn_goodfood_finder"
                />
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="共5題(1/5)"
            android:textSize="@dimen/item_text_size"
            android:textColor="#ff000000"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/page"/>
</LinearLayout>