<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:src="@drawable/img_start_page"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_redbrown"
                    android:background="@color/block_ded6de"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/common_size"
                    android:text="@string/str_user_sex"/>

            <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                <RadioButton
                        android:id="@+id/radioMan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/common_size_large"
                        android:text="男"
                        android:textColor="@color/txt_redbrown"
                        android:layout_weight="1"
                        android:button="@drawable/radio"
                        android:paddingLeft="5dp"
                        android:paddingRight="40dp"
                        android:checked="true"/>
                <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/common_size_large"
                        android:textColor="@color/txt_redbrown"
                        android:button="@drawable/radio"
                        android:paddingLeft="5dp"
                        android:paddingRight="40dp"
                        android:text="女"
                        android:layout_weight="1"/>
            </RadioGroup>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/common_size"
                    android:textColor="@color/txt_redbrown"
                    android:background="@color/block_ded6de"
                    android:padding="10dp"
                    android:text="@string/str_user_age"/>

            <Spinner
                    android:id="@+id/userBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/spinner_border_white"
                    android:textSize="@dimen/common_size"/>

            <Button
                    android:id="@+id/btnStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/common_size"
                    android:layout_margin="20dp"
                    android:textColor="@drawable/txt_style_solid_brown_1"
                    android:background="@drawable/btn_style_solid_brown_1"
                    android:text="@string/btn_start"/>
        </LinearLayout>

    </ScrollView>


</LinearLayout>