<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@color/white">

    <include layout="@layout/action_bar_no_option"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <View android:layout_height="10dp"
                  android:layout_width="match_parent"
                  android:background="@color/pp_line_color_33"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/pp_txt_name"-->
                <!--android:padding="10dp"-->
                <!--android:textColor="@color/pp_text_color_brown"-->
                <!--android:textSize="@dimen/common_size_large"/>-->
                <TextView
                        android:id="@+id/pp_register_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="請輸入姓名"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/common_size_small"/>
                <ImageView
                        android:id="@+id/pp_img_user_photo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/pp_ic_nobody"/>
            </RelativeLayout>
            <View android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:background="@color/pp_line_color_33"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/pp_txt_birthday"-->
                <!--android:padding="10dp"-->
                <!--android:textColor="@color/pp_text_color_brown"-->
                <!--android:textSize="@dimen/common_size_large"/>-->
                <TextView
                        android:id="@+id/pp_register_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:hint="請輸入生日"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:inputType="none"
                        android:textSize="@dimen/common_size_small"/>
            </LinearLayout>
            <View android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:background="@color/pp_line_color_33"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/pp_txt_sex"-->
                <!--android:padding="10dp"-->
                <!--android:textColor="@color/pp_text_color_brown"-->
                <!--android:textSize="@dimen/common_size_large"/>-->

                <TextView
                        android:id="@+id/pp_register_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:hint="請輸入性別"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:inputType="none"
                        android:textSize="@dimen/common_size_small"/>
            </LinearLayout>
            <View android:layout_height="1dp"
                  android:layout_width="match_parent"
                  android:background="@color/pp_line_color_33"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="@string/pp_txt_address"-->
                <!--android:padding="10dp"-->
                <!--android:textColor="@color/pp_text_color_brown"-->
                <!--android:textSize="@dimen/common_size_large"/>-->
                <TextView
                        android:id="@+id/pp_register_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:hint="請輸入縣市"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:inputType="none"
                        android:textSize="@dimen/common_size_small"/>
            </LinearLayout>

            <View android:layout_height="10dp"
                  android:layout_width="match_parent"
                  android:background="@color/pp_line_color_33"/>
            <Button
                    android:id="@+id/pp_btn_about_me_sumit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="修改資料"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@drawable/txt_style_solid_brown_1"
                    android:textSize="@dimen/common_size"
                    android:background="@drawable/btn_style_solid_orange"
                    android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

