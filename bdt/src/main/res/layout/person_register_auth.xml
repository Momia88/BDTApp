<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@color/white">

    <include layout="@layout/action_bar_no_option"/>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <EditText
            android:id="@+id/pp_txt_code_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="請輸入您的驗證碼"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/text_view_border"
            android:inputType="phone"
            android:digits="0123456789"
            android:textSize="@dimen/common_size" />

    <Button
            android:id="@+id/pp_register_code_sumit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="下一步"
            android:textSize="@dimen/common_size_small"
            android:textColor="@color/white"
            android:background="@drawable/btn_style_solid_brown_1"/>

</LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pp_text_color_brown"
            android:orientation="vertical">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="若驗證碼未顯示："
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:padding="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/common_size" />
        <Button
                android:id="@+id/pp_register_code_resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="重傳驗證碼"
                android:textSize="@dimen/common_size_small"
                android:textColor="@color/white"
                android:background="@drawable/btn_style_solid_orange"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="請注意！\n驗證碼一天最多\n只能傳三次喔！"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/common_size" />
        </LinearLayout>
</LinearLayout>