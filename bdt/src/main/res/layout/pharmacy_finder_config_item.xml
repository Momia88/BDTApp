        <!--android:textColor="#ff000000"-->
        <!--android:layout_span="1"-->
        <!--android:textSize="@dimen/item_detail_size"/>-->
        <!--</TableRow>-->
        <TableRow>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="●"
                      android:id="@+id/symbol_3"
                      android:layout_gravity="center_horizontal"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_list_symbol"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="開車12分鐘"
                      android:id="@+id/company_address"
                      android:layout_gravity="left"
                      android:textColor="@color/map_link"
                      android:textStyle="normal"
                      android:onClick="onClick"
                      android:clickable="true"
                      android:layout_span="2"
                      android:textSize="@dimen/item_detail_size"
                      android:layout_marginRight="5dip"/>
        </TableRow>

        <TableRow>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="●"
                      android:id="@+id/symbol_4"
                      android:layout_gravity="center_horizontal"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_list_symbol"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="查詢人氣："
                      android:id="@+id/popular"
                      android:layout_gravity="left"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_detail_size"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="77人"
                      android:id="@+id/popular_count"
                      android:layout_gravity="left"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_detail_size"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="●"
                      android:id="@+id/symbol_5"
                      android:layout_gravity="center_horizontal"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_list_symbol"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="點評人數："
                      android:id="@+id/comment_1"
                      android:layout_gravity="left"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_detail_size"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="48人"
                      android:id="@+id/comment_count"
                      android:layout_gravity="left"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_detail_size"/>
        </TableRow>
        <TableRow>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="●"
                      android:id="@+id/symbol_6"
                      android:layout_gravity="center_horizontal"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_list_symbol"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="點評結果："
                      android:id="@+id/Comment_2"
                      android:layout_gravity="left"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_detail_size"/>
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:text="良"
                      android:id="@+id/comment_result"
                      android:layout_gravity="left"
                      android:textColor="#ff000000"
                      android:textSize="@dimen/item_detail_size"
                      android:layout_marginBottom="4dp"/>
        </TableRow>
    </TableLayout>

    <Button
            android:layout_width="180sp"
            android:layout_height="60sp"
            android:text="@string/button_know_more"
            android:id="@+id/button_know_more"
            android:textSize="@dimen/common_size"
            android:textColor="@color/tutor_skip"
            android:background="@drawable/btn_shape_selector"
            android:layout_marginTop="8dip"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="20dip"
            android:layout_gravity="right"/>


</LinearLayout>