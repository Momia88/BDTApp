<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="#ffffffff">
    <include layout="@layout/action_bar_with_back"/>

    <View android:id="@+id/noLifeHealthQaLine"
          android:layout_height="6dp"
          android:layout_width="match_parent"
          android:layout_marginTop="0dp"
          android:background="@android:color/darker_gray"/>


    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    >

                <ImageView android:id="@+id/titleIV"
                        android:layout_width="300dp"
                           android:layout_height="140dp"
                           android:layout_marginTop="10dp"
                        />
            </LinearLayout>

            <TextView android:id="@+id/question"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:gravity="left"
                      android:layout_gravity="left"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="20dp"
                      android:layout_marginTop="0dp"
                      android:text="             "
                      android:textColor="@color/black"
                      android:textSize="@dimen/common_size"/>
            <Button android:id="@+id/healthAnsBtn1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/common_size"
                    android:text=""
                    android:textColor="@drawable/btn_brown_white_text"
                    android:background="@drawable/btn_style_solid_gray"/>
            <Button android:id="@+id/healthAnsBtn2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/common_size"
                    android:text="             "
                    android:textColor="@drawable/btn_brown_white_text"
                    android:background="@drawable/btn_style_solid_gray"/>

            <Button android:id="@+id/healthAnsBtn3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/common_size"
                    android:text="  "
                    android:textColor="@drawable/btn_brown_white_text"
                    android:background="@drawable/btn_style_solid_gray"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

