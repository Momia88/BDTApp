<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffffff"
              android:weightSum="1">
    <include layout="@layout/action_bar_with_back"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Doctor Name"
                    android:id="@+id/textView1"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/tutor_skip"
                    android:textSize="@dimen/common_size"
                    android:layout_marginLeft="15dip"
                    android:layout_marginBottom="10dip"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Hospital"
                    android:id="@+id/textView2"
                    android:textColor="@color/tutor_skip"
                    android:textSize="@dimen/item_text_size"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="10dip"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Division"
                    android:id="@+id/textView3"
                    android:textColor="@color/tutor_skip"
                    android:textSize="@dimen/item_text_size"
                    android:layout_marginLeft="20dip"/>
            <View
                    android:layout_height="1dp"
                    android:layout_width="fill_parent"
                    android:background="@color/doctor_comment"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/message_title"
                        android:id="@+id/textViewMessage"
                        android:textColor="@color/doctor_comment"
                        android:textSize="@dimen/common_size"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="gone"/>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:paddingLeft="15dip"
                        android:id="@+id/keywordET"
                        android:textSize="@dimen/common_size"
                        android:textColor="#ff000000"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp"
                        android:layout_marginBottom="10dip"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/text_view_border"
                        android:hint="@string/text_keyword_hint"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:gravity="top"
                        android:maxLength="50"
                        android:textColorHint="@color/hint_color"
                        android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Question"
                        android:id="@+id/textViewQuestion"
                        android:textColor="@color/doctor_comment"
                        android:textSize="@dimen/common_size"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"/>

                <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="0dp"
                        android:visibility="visible"
                        android:id="@+id/answerGroup">
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/common_size"
                            android:text="answer1"
                            android:id="@+id/answer1"
                            android:visibility="visible"/>
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/common_size"
                            android:text="answer2"
                            android:id="@+id/answer2"
                            android:visibility="visible"/>
                    <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/common_size"
                            android:text="answer3"
                            android:id="@+id/answer3"
                            android:visibility="visible"/>

                </RadioGroup>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/page_num"
                        android:textSize="@dimen/item_text_size"
                        android:textColor="#ff000000"
                        android:layout_gravity="right"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/page"/>
            </LinearLayout>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:text="@string/next_step"
                    android:id="@+id/button_next"
                    android:textSize="@dimen/common_size"
                    android:textColor="@color/tutor_skip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/btn_skip_learn_selector"
                    android:visibility="visible"
                    />
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    android:layout_marginRight="60dp"
                    android:layout_marginLeft="60dp"
                    android:text="@string/no_message_close"
                    android:id="@+id/button_ignore"
                    android:textSize="@dimen/common_size"
                    android:textColor="@color/tutor_skip"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_skip_learn_selector"
                    android:visibility="gone"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>