<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/white">
    <include layout="@layout/action_bar_with_back"/>

    <ScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        <Button
            android:id="@+id/startButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="開始計步"
            android:textSize="25dp"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:textColor="@drawable/btn_white_darkbrown_text"
            android:background="@drawable/btn_style_solid_orange"/>

    <TextView
            android:id="@+id/text_view_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="於公館大坑走了"
            android:textColor="#000000"
            android:textSize="30sp"/>

    <TextView
            android:id="@+id/step"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0 步"
            android:textColor="#BAA8A2"
            android:textSize="35sp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dip"
            android:text="－－－－－－－－－－－－"
            android:textColor="#C89F62"
            android:textSize="15sp"/>

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="總散步時間"
            android:textColor="#000000"
            android:textSize="30sp" />

    <TextView
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="0時:0分:0秒"
            android:textColor="#BAA8A2"
            android:textSize="35sp" />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="－－－－－－－－－－－－"
            android:textColor="#C89F62"
            android:textSize="15sp"/>

    <Button
            android:id="@+id/stopButton"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="結束計步"
            android:textSize="25dp"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="20dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:textColor="@drawable/btn_white_darkbrown_text"
            android:background="@drawable/btn_style_solid_orange"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        <View android:layout_width="match_parent"
              android:layout_height="120dp"
              android:background="#E5E5E5"
              android:layout_alignParentBottom="true"/>

        <Button
                android:id="@+id/stepRecord"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@drawable/btn_white_darkbrown_text"
                android:background="@drawable/btn_style_solid_lightbrown"
                android:textSize="25dp"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:text="在公館大坑的記錄"
                android:singleLine="true"/>

    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>