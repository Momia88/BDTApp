<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/tutorThirdLL"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:layout_margin="0dp"
        >


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/tutor_turtle"
                   android:layout_marginBottom="20dp"
                   android:layout_marginLeft = "40dp"
                />

        <Button
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="@string/tutorial_start_use"
                android:id="@+id/nextstep"
                android:textSize="@dimen/common_size"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="40dp"
                android:textColor="@drawable/btn_white_darkbrown_text"
                android:background="@drawable/btn_style_solid_lightbrown"/>


    </LinearLayout>

</LinearLayout>
