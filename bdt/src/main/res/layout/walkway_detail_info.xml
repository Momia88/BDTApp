<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="#ffffffff">
    <include layout="@layout/action_bar_with_tools"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">


            <ImageView
                    android:id="@+id/img_walkway_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_start_page"
                    android:scaleType="fitCenter"
                    android:visibility="visible"/>

            <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="步道"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/txt_3c2622"
                    android:textSize="@dimen/main_text_size"
                    android:textStyle="bold"
                    android:layout_marginTop="10dip"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dip"/>

            <TextView android:id="@+id/txt_subTitle"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="副標"
                      android:layout_gravity="center_horizontal"
                      android:textColor="@color/black"
                      android:textSize="@dimen/item_text_size"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginBottom="5dip"/>

            <TextView android:id="@+id/txt_feature"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:hint="特色"
                      android:textColor="@color/black"
                      android:textSize="@dimen/item_text_size"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginBottom="10dip"/>
            <LinearLayout
                    android:id="@+id/wwFriendVisitedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/btn_line_cdbeba"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:visibility="gone">
                <TextView
                        android:id="@+id/wwTvFriendVisited"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/txt_3c2622"
                        android:clickable="true"
                        android:focusable="true"
                        android:textSize="@dimen/txt_size_20"
                        android:text=""/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                    <ImageView
                            android:id="@+id/wwImgVisitedIcon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_ww_no_visit"/>
                    <TextView
                            android:id="@+id/wwVisitedTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txt_3c2622"
                            android:textSize="@dimen/txt_size_20"
                            android:text=""/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:layout_margin="5dp"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/item_list_symbol"/>
                    <TextView
                            android:id="@+id/txt_walkway_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="地址"
                            android:layout_gravity="center"
                            android:textColor="@color/txt_ec6a1a"
                            android:clickable="true"
                            android:textSize="@dimen/item_detail_size"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:layout_margin="5dp"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/item_list_symbol"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="附設停車場："
                                  android:layout_gravity="left"
                                  android:textColor="#ff000000"
                                  android:textSize="@dimen/item_detail_size"/>
                        <TextView
                                android:id="@+id/txt_park_available"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="是"
                                android:layout_gravity="left"
                                android:textColor="@color/black"
                                android:textSize="@dimen/item_detail_size"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="●"
                              android:layout_margin="5dp"
                              android:textColor="#ff000000"
                              android:textSize="@dimen/item_list_symbol"/>
                    <TextView android:id="@+id/txt_distance"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="全程"
                              android:textColor="#ff000000"
                              android:layout_gravity="center"
                              android:layout_span="5"
                              android:textSize="@dimen/item_detail_size"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="●"
                              android:layout_margin="5dp"
                              android:textColor="#ff000000"
                              android:textSize="@dimen/item_list_symbol"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="天氣預報"
                            android:textColor="#ff000000"
                            android:layout_gravity="center"
                            android:layout_span="5"
                            android:textSize="@dimen/item_detail_size"/>
                </LinearLayout>
                <TableLayout
                        android:id="@+id/ww_weathier_tablelayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="0,1,2">
                    <TableRow>

                        <TextView
                                android:id="@+id/ww_txt_weather_date_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:background="@color/btn_line_cdbeba"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_margin="1dp"
                                android:textSize="@dimen/item_list_symbol"
                                android:text="- -"/>
                        <TextView
                                android:id="@+id/ww_txt_weather_date_2"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:background="@color/btn_line_cdbeba"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_margin="1dp"
                                android:textSize="@dimen/item_list_symbol"
                                android:text="- -"/>
                        <TextView
                                android:id="@+id/ww_txt_weather_date_3"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:background="@color/btn_line_cdbeba"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_margin="1dp"
                                android:textSize="@dimen/item_list_symbol"
                                android:text="- -"/>
                        <!--<TextView-->
                                <!--android:id="@+id/ww_txt_weather_date_4"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_weight="1"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:textColor="@color/black"-->
                                <!--android:background="@color/btn_line_cdbeba"-->
                                <!--android:padding="5dp"-->
                                <!--android:gravity="center"-->
                                <!--android:layout_margin="1dp"-->
                                <!--android:textSize="@dimen/item_list_symbol"-->
                                <!--android:text="11/14"/>-->
                    </TableRow>

                    <TableRow>
                        <ImageView
                                android:id="@+id/ww_img_weather_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_margin="1dp"/>
                        <ImageView
                                android:id="@+id/ww_img_weather_2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_margin="1dp"/>
                        <ImageView
                                android:id="@+id/ww_img_weather_3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:padding="5dp"
                                android:gravity="center"
                                android:layout_margin="1dp"/>
                        <!--<ImageView-->
                                <!--android:id="@+id/ww_img_weather_4"-->
                                <!--android:layout_width="0dp"-->
                                <!--android:layout_height="wrap_content"-->
                                <!--android:layout_weight="1"-->
                                <!--android:background="@color/white"-->
                                <!--android:padding="5dp"-->
                                <!--android:gravity="center"-->
                                <!--android:layout_margin="1dp"/>-->
                    </TableRow>

                </TableLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/item_detail_size"
                            android:text="步道介紹："
                            android:layout_marginBottom="10dp"/>
                    <TextView
                            android:id="@+id/txt_walkway_detail_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="描述"
                            android:textColor="#ff000000"
                            android:textSize="@dimen/item_detail_size"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

