<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
              android:background="@android:color/transparent">
    <include layout="@layout/action_bar_with_back"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginBottom="10dp"
            android:gravity="center">
        <TextView
                android:id="@+id/textDivision_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全程"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/common_size"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/walkway_location_distance_type_spinner"
                android:prompt="@string/spinner_prompt_walkway"
                android:spinnerMode="dialog"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/spinner_border_white"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_marginTop="30dp"/>
</LinearLayout>