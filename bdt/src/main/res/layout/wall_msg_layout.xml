<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white">
    <include layout="@layout/action_bar_no_option"/>

    <LinearLayout
            android:id="@+id/pp_menu_login_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_msg_user_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/pp_ic_img_default"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_gravity="center">
            <TextView
                    android:id="@+id/txt_msg_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="@color/pp_text_color_black"
                    android:textSize="@dimen/common_size_large"/>
            <Button
                    android:id="@+id/btnMsgAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:text="新增文章"
                    android:textColor="@drawable/txt_style_solid_orange_1"
                    android:textSize="@dimen/common_size"
                    android:background="@drawable/btn_style_solid_orange_1"/>

        </LinearLayout>
    </LinearLayout>
    <View android:layout_height="10dp"
          android:layout_width="match_parent"
          android:background="@color/pp_line_color_33"/>
    <ListView
            android:id="@+id/msgList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>